<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".Staff.Patron.DonationHistoryDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Donation Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/layout_texts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donation Details"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_donation_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donation ID: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title: "
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_donor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donor: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artist: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_reference_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference Code: "
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Dispatched to Wallet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#16A34A"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- View Receipt Button -->
                <Button
                    android:id="@+id/btn_view_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Receipt"
                    android:backgroundTint="@color/deep_blue"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_below="@id/layout_texts"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
