<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Students.WorkshopDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Banner Image -->
                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#CCCCCC"
                    android:contentDescription="Banner Image"
                    android:layout_marginBottom="16dp" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workshop Topic"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#222222" />

                <!-- Mentor Name -->
                <TextView
                    android:id="@+id/tv_mentor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mentor: Dr. John Doe"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="2dp" />

                <!-- Type -->
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Physical/Virtual"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Dates -->
                <TextView
                    android:id="@+id/tv_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date - End Date"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Venue -->
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link/Venue: Location"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workshop Description goes here..."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_pending_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending Approval"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#336699"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Buttons Row -->
                <LinearLayout
                    android:id="@+id/register_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:weightSum="2"
                    android:background="#E8F5E9"
                    android:padding="16dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_register_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Don’t miss this opportunity! Register now to secure your slot and be mentored by industry professionals."
                        android:textSize="15sp"
                        android:textColor="#336699"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp" />

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/btn_color"
                        android:padding="14dp"
                        android:elevation="4dp"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
                <!-- Approval Notification Section -->
                <LinearLayout
                    android:id="@+id/layout_approval_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:background="#E8F5E9"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_approved_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You’ve been approved for the workshop!"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_joining_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details on how to attend or join the workshop will be shared here soon."
                        android:textSize="14sp"
                        android:textColor="#388E3C"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Join Workshop Notification Section -->
                <LinearLayout
                    android:id="@+id/layout_join_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:background="#E3F2FD"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_join_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You're all set! Join the workshop now using the link below:"
                        android:textSize="15sp"
                        android:textColor="#1565C0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_meet_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://meet.google.com/xyz-abc-def"
                        android:textColor="#0D47A1"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:autoLink="web"
                        android:padding="8dp"
                        android:background="#BBDEFB"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>