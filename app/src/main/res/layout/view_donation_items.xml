<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="8dp"
        card_view:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txv_donationID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation ID: #12345"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txv_donor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor: John Doe"
                android:textColor="#444444"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist: Jane Smith"
                android:textColor="#444444"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: KES 5,000"
                android:textColor="@color/green_900"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending Approval"
                android:textColor="@color/orange_700"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
