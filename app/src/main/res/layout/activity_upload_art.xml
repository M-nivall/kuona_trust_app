<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Clients.UploadArt">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Your Artwork"
        android:textSize="24sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="24dp"
        android:hint="Artwork Title"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title"
        android:layout_marginTop="16dp"
        android:hint="Artwork Description"
        android:minLines="4"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/edt_description"
        android:layout_marginTop="16dp"
        android:background="#EEE"
        android:scaleType="centerCrop"
        android:contentDescription="Selected Artwork" />

    <Button
        android:id="@+id/btn_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_selected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Choose Image" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_choose_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_500"
        android:text="Upload Artwork"
        android:textColor="#FFFFFF" />
</RelativeLayout>
