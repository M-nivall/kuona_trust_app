<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clients.Help_in"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="start">

            <!-- Sign In Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are required to sign in to:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dot"
                android:drawablePadding="8dp"
                android:text="Access Post Artwork"
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dot"
                android:drawablePadding="8dp"
                android:text="View Other Artist Artwork"
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can sign in with your username. To sign in:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Open the app."
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Take one of the following actions as prompted:"
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="• If you had previously signed in, you’ll be prompted to sign back in. Enter your username and password to access your account."
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="• If you are a new user, tap 'Register Here' to create a new account."
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingBottom="20dp" />

            <!-- Sign Out Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signing out disables access to your services and history in the app, including documents and workflows."
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To sign out, click on the menu icon and select 'Logout'."
                android:textSize="15sp"
                android:textStyle="normal"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
