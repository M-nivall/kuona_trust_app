<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Artwork Image -->
        <ImageView
            android:id="@+id/artwork_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="#CCC" />

        <!-- Artwork Title -->
        <TextView
            android:id="@+id/artwork_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/artwork_image"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/artwork_image"
            android:text="Artwork Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222222"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2dp" />


        <!-- Artist Name -->
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artwork_title"
            android:layout_toEndOf="@id/artwork_image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Artist Name"
            android:textSize="14sp"
            android:textColor="#555" />

        <!-- View Details Icon -->
        <ImageView
            android:id="@+id/view_details"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/artwork_title"
            android:src="@drawable/details"
            android:contentDescription="View Details"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
