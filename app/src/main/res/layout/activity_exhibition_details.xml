<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Artists.ExhibitionDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Banner Image -->
                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#CCCCCC"
                    android:contentDescription="Banner Image"
                    android:layout_marginBottom="16dp" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exhibition Title"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#222222" />

                <!-- Type -->
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Physical/Virtual"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Dates -->
                <TextView
                    android:id="@+id/tv_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date - End Date"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Venue -->
                <TextView
                    android:id="@+id/tv_venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venue: Location"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exhibition Description goes here..."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Button -->
                <Button
                    android:id="@+id/btn_submit_artwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Your Artwork"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/btn_color"
                    android:layout_marginTop="24dp"
                    android:padding="12dp"
                    android:elevation="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
