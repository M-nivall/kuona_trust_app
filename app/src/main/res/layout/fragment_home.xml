<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.Varsani.Clients.home.HomeFragment">

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuona Trust Foundation"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true" />

    <!-- Section Title: Exhibitions -->
    <TextView
        android:id="@+id/tv_exhibitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Exhibitions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:layout_below="@id/tv_dashboard_title"
        android:layout_marginTop="12dp" />

    <!-- Exhibitions RecyclerView (Horizontal) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_exhibitions"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_exhibitions"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:padding="4dp"
        tools:listitem="@layout/lv_item_exhibition"/>

    <!-- Section Title: Artworks -->
    <TextView
        android:id="@+id/tv_artworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artists Blogs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:layout_below="@id/rv_exhibitions"
        android:layout_marginTop="20dp" />

    <!-- Artworks RecyclerView (Vertical/Grid) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_artworks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_artworks"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        tools:listitem="@layout/lv_item_artwork" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:gravity="center"
        android:padding="4dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- About -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
