<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context="com.example.Varsani.Staff.Finance.DonationDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Donation Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation Details"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_blue"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_donation_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation ID: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_donor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donor: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_reference_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reference Code: "
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending Approval"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#D97706"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fund Allocation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fund Allocation"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_blue"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_total_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: KES 50000"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_artist_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist Share (80%): KES 0"
                    android:textSize="16sp"
                    android:textColor="#256D1B"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_company_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Share (20%): KES 0"
                    android:textSize="16sp"
                    android:textColor="#4B5563" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Release Button -->
        <Button
            android:id="@+id/btn_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approve Received"
            android:backgroundTint="#256D1B"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_button" />

        <!-- Release Button -->
        <Button
            android:visibility="gone"
            android:id="@+id/btn_release_funds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Funds to Artist"
            android:backgroundTint="#1E3A8A"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_button" />

    </LinearLayout>

</ScrollView>
